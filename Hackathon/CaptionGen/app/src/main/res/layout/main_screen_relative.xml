<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/button_camera"
        android:layout_width="115dp"
        android:layout_height="95dp"
        android:layout_marginStart="144dp"
        android:background="@android:color/black"
        android:hapticFeedbackEnabled="true"
        android:src="@drawable/cam_button"
        android:text="Live"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="159dp"
        android:layout_height="111dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/camera" />

    <TextView
        android:id="@+id/editTextTextPersonName"
        android:layout_width="199dp"
        android:layout_height="68dp"
        android:background="#ffffff"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="LiveCap"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3" />

    <ImageButton
        android:id="@+id/button_image"
        android:layout_width="197dp"
        android:layout_height="145dp"
        android:layout_marginStart="104dp"
        android:background="@android:color/black"
        android:src="@drawable/upload"
        android:text="Gallery"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="327dp"
        android:layout_height="148dp"
        android:gravity="center"
        android:rotationX="0"
        android:scaleX="0"
        android:text="LiveCap provides real-time visual descriptors of photos and videos. \n \n Upload an existing photo/video or get live captioning while filming."
        android:textColor="@color/black"
        android:textSize="20sp" />
</RelativeLayout>